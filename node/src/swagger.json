{
  "openapi": "3.0.0",
  "info": {
    "description": "Node API documentation following rocketseat classes",
    "version": "1.0",
    "title": "Node API documentation",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "vaugsantos@gmail.com"
